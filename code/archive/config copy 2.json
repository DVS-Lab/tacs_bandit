{
  "experiment": {
    "mode": "THETA_NIC",
    "run_duration_minutes": 6,
    "run_types": {
      "1": "baseline",
      "2": "stimulation",
      "3": "stimulation",
      "4": "post_stimulation",
      "5": "baseline",
      "6": "stimulation",
      "7": "stimulation",
      "8": "post_stimulation"
    },
    "counterbalance_stimulation": true,
    "break_after_run_4_minutes": 5
  },
  "task": {
    "min_trials_same_contingency": 25,
    "contingency_jitter": 4,
    "win_fraction": 0.75,
    "reversal_learning": true
  },
  "timing": {
    "fixation_duration": 0.5,
    "max_response_time": 2.0,
    "choice_highlight_duration": 0.5,
    "wait_duration_min": 2.0,
    "wait_duration_max": 2.0,
    "outcome_duration": 1.0,
    "iti_duration": 0.25
  },
  "stimulation": {
    "enabled": true,
    "test_mode": true,
    "communication_type": "file_based",
    "command_directory": "./nic_commands",
    "protocols": {
      "active": "DLPFC_Active",
      "sham": "DLPFC_Sham"
    },
    "markers": {
      "enabled": true,
      "trial_start": 10,
      "choice": 20,
      "feedback_win": 31,
      "feedback_loss": 32,
      "feedback_miss": 33,
      "run_start": 100,
      "run_end": 200
    },
    "instructions": {
      "show_manual_steps": true,
      "pause_for_confirmation": false
    }
  },
  "stimuli": {
    "fixation_size": 0.02,
    "slot_size": 0.15,
    "slot_separation": 0.4,
    "feedback_size": 0.1,
    "use_images": true,
    "flower_indices": [1, 50],
    "randomize_positions": true
  },
  "display": {
    "background_color": [0, 0, 0],
    "text_color": [1, 1, 1],
    "window_width": 1024,
    "window_height": 768,
    "fullscreen": false
  },
  "paths": {
    "data_dir": "../data",
    "stimuli_dir": "../stimuli/images",
    "log_dir": "../logs"
  },
  "data_output": {
    "save_format": "csv",
    "include_timestamps": true,
    "include_stimulation_info": true
  }
}
